@model IEnumerable<Data.Entities.Shop.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/datatables/css/dataTables.bootstrap4.css" />


<h1>Manage Controller </h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="container">
    <table id="Products" class="table table-striped table-bordered dt-resposive nowrap">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Price</th>
                <th>Image</th>
                <th>Discreption</th>
                <th>Actions</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts
    {
    <script src="~/datatables/js/jquery.dataTables.js"></script>
    <script src="~/datatables/js/dataTables.bootstrap4.js"></script>
    <script src="~/js/ProductDatatable.js"></script>
}
















